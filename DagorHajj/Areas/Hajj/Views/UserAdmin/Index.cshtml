
@{
    ViewBag.Title = "List of System Users";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

@section HeaderStyles
{
    
}

<div class="content" ng-controller="AdminSystemUserListController">
    <span class="pull-right"><a href="@Url.Action("Create")" class="btn btn-success m-r-5 m-b-5">Add New</a></span>
    <h1 class="page-header">System Users</h1>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn"> <a href="javascript:void(0);" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a> </div>
                    <h4 class="panel-title"><strong>List of System Users</strong></h4>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                        <div class="form-group" style="margin-left:5px;">
                            <input type="text" class="form-control" placeholder="Search" ng-change="searchFromList()" ng-model="searchText" />
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>User Name</th>
                                    <th>User ID</th>
                                    @*<th>User Type</th>*@
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="x in filteredUsers | filter:searchText">
                                    <td ng-bind="$index+1"></td>
                                    <td ng-bind="x.Name"></td>
                                    <td ng-bind="x.Email"></td>
                                    @*<td ng-bind="x.Role"></td>*@
                                    <td ng-bind="x.IsActive ? 'Active' : 'Inactive'"></td>
                                    <td>
                                        <a class="btn btn-info btn-xs white" ng-href="/Hajj/UserAdmin/Edit?Id={{x.Id}}"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="pull-right">
                            <ul uib-pagination total-items="DataList.length" items-per-page="itemsPerPage" ng-change="pageChanged()" ng-model="currentPage" max-size="maxSize" class="pagination-sm" boundary-links="true"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Areas/Hajj/NgController/AdminSystemUserListController.js"></script>
}