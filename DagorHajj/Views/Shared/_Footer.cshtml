<div class="modal fade" id="modal-password">
    <div style="width:400px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Change Password</h4>
            </div>
            <form action="" method="post" data-parsley-validate="true" name="frmChangePassword" id="frmChangePassword">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-lg-5 col-md-5 col-sm-12 col-xs-12">Old Password </label>
                            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                                <input type="text" id="oldPassword" name="oldPassword" class="form-control m-b-5" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-5 col-md-5 col-sm-12 col-xs-12">New Password </label>
                            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                                <input type="text" name="newPassword" id="newPassword" class="form-control m-b-5" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-5 col-md-5 col-sm-12 col-xs-12">Confirm New Password </label>
                            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                                <input type="text" name="confirmNewPassword" id="confirmNewPassword" class="form-control m-b-5" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <span id="changePasswordActionResult"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-success pull-right" name="changePasswordSubmit" id="changePasswordSubmit" value="Submit" />
                </div>
            </form>
        </div>
    </div>
</div>
