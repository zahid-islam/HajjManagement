            <script src="~/Content/assets/crossbrowserjs/html5shiv.js" type="text/javascript"></script>
            <script src="~/Content/assets/crossbrowserjs/respond.min.js" type="text/javascript"></script>
            <script src="~/Content/assets/crossbrowserjs/excanvas.min.js" type="text/javascript"></script>
        <![endif]-->
        <a></a>*@
    <script src="~/Content/assets/plugins/slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-cookie/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/login-v2.demo.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/apps.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            LoginV2.init();
        });
    </script>
</body>
</html>