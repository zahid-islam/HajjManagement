@{
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
     ViewBag.Title = "Ticket - Invoice";
}
<style>
    hr {
        margin: 0px;
    }
</style>

<center><h6 class="print_title shadow-header" style="text-align:center; margin-top:10px;"><b>Invoice</b></h6></center>

<div style="margin-left:5%; margin-right:5%" class="row" ng-controller="TicketReportController">
    <div id="loader2" ng-show="loading">
        <img src="~/Content/images/loading.gif" />
    </div>

    <div style="margin-top: 10px;" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table class="table noborders">
            <tbody>
                <tr>
                    <td><b>Invoice No: </b> T{{Ticket.ID}}</td>
                    <td><b>Reference:</b> {{Ticket.GroupLeaderName}}</td>
                </tr>
                @*<tr>
                    <td><b>Booking Date:</b> {{Ticket.IssueDate}}</td>
                    <td><b>Departure Date:</b> </td>
                    <td><b>Return Date:</b></td>
                    <td><b></b></td>
                </tr>*@
            </tbody>
        </table>
        <div style="margin-top:20px;"></div>
        <div class="col-md-5 col-xs-5" style="display:inline;border:1px solid;min-height:100px;">
            <p><b>Sell To:</b></p>
            <p>{{Ticket.SellTo}}</p>
            @*<p>{{Ticket.BillToPersonAddress}}</p>*@
        </div>
        <div class="col-md-1 col-xs-1" style="display:inline;"></div>
        <div class="col-md-6 col-xs-6" style="display:inline;border:1px solid;float:left;min-height:100px">
            <table class="table-cust">
                <tr>
                    <td width="30%"><b>Passenger</b></td>
                    <td width="50%"></td>
                    @*<td width="40%"><b>Phone:</b> {{Ticket.PhoneNo}}</td>*@
                </tr>
                <tr>
                    <td width="30%">{{Ticket.LastName}}</td>
                    <td width="30%">{{Ticket.MiddleName}}</td>
                    <td width="40%">{{Ticket.FirstName}}</td>
                </tr>
            </table>
        </div>
        <div class="clearfix"></div>
        <h5>ITINERAGY</h5>
        <table class="" style="width:100%;">
            <thead>
                <tr>
                    <th style="text-align:left">Ticket No</th>
                    <th style="text-align:left">Flight No</th>
                    @*<th style="text-align:right">Purchase Rate</th>*@
                    <th style="text-align:right">Total Amount</th>
                </tr>
            </thead>
            <tr>
                <td>{{Ticket.TicketNo}}</td>
                <td>{{Ticket.FlightNo}}</td>
                @*<td align="right">{{Ticket.PurchaseRate}}</td>*@
                <td align="right">{{Ticket.SellingRate}}</td>
            </tr>
            <tr>
                <td align="right" colspan="4">Paid Amount: {{Ticket.PaidAmount}}</td>
                @*<td align="right">{{Ticket.PaidAmount}}</td>*@
            </tr>
            <tr>
                <td align="right" colspan="4">Due Amount:  {{Ticket.DueAmount}}</td>
                @*<td align="right">{{Ticket.DueAmount}}</td>*@
            </tr>
        </table>        
    </div>
</div>

@section scripts{
    <script src="~/Areas/Hajj/Scripts/TicketReportController.js"></script>
}

