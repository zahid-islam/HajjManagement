
@{
    ViewBag.Title = "Hajj Reports";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

@section HeaderStyles
{

    <style type="text/css">
        .modal-dialog {
            margin: 118px auto 0 auto;
            width: 470px;
            position: relative;
            z-index: 99999;
        }

        .panel-body ul {
            margin-left: 0;
            padding-left: 0;
        }

        .panel-body ul li {
            list-style-type: decimal;
            line-height: 22px;
        }

        .panel-body ul li a {
            padding-left: 5px;
            color: #707478;
        }

        .panel-body ul li a:hover {
            color: #048ABB;
        }
    </style>
}

